<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/song_art"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/play_music_image" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/song_art">


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="210dp"
            android:layout_height="75dp">

            <TextView
                android:id="@+id/song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:singleLine="true"
                android:text="No Title"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/song_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="17dp"
                android:singleLine="true"
                android:text="Tumhe"
                android:textColor="#696969"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/relative"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/more_options"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_above="@+id/song_time"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:src="@drawable/more" />


            <TextView
                android:id="@+id/song_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="17dp"
                android:singleLine="true"
                android:text="No time"
                android:textColor="#696969"
                android:textSize="14sp" />


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>